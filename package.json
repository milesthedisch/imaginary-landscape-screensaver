{
  "private": true,
  "name": "imaginary-landscapes-screensaver",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  eslintConfig: {
    extends: "problems",
    env: {
        "web": true
    }          
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "node-sass": "^4.7.2",
    "preact-cli": "^2.0.0",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0"
  }
